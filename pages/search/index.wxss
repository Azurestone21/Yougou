page {
  background-color: #f2f3f7;
}
.search_wrap {
  padding: 20rpx;
}
.search_wrap .search_input_wrap {
  display: flex;
  height: 70rpx;
}
.search_wrap .search_input_wrap input {
  background-color: #fff;
  height: 100%;
  flex: 1;
  padding-left: 20rpx;
}
.search_wrap .search_input_wrap button {
  padding: 10rpx;
  width: 120rpx;
  height: 100%;
  margin-left: 20rpx;
  border: 1rpx solid #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-weight: normal;
}
.search_wrap .search_content {
  margin-top: 20rpx;
  background-color: #fff;
}
.search_wrap .search_content .search_item {
  background-color: #fff;
  font-size: 28rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
