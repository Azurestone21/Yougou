/* 轮播图 */
.index_swiper swiper {
  width: 750rpx;
  height: 340rpx;
}
.index_swiper swiper image {
  width: 100%;
}
/* 导航 */
.index_nav {
  display: flex;
}
.index_nav navigator {
  padding: 20rpx;
  flex: 1;
}
.index_nav navigator image {
  width: 100%;
}
/* 分类 */
.index_sort .index_group {
  padding: 0 10rpx;
}
.index_sort .index_group .sort_title {
  padding: 20rpx 0 0 0;
}
.index_sort .index_group .sort_title image {
  width: 100%;
}
.index_sort .index_group .sort_list {
  overflow: hidden;
}
.index_sort .index_group .sort_list navigator {
  width: 33.33%;
  float: left;
}
.index_sort .index_group .sort_list navigator:nth-last-child(-n+4) {
  height: 27.72711207vw;
  border-left: 10rpx solid #fff;
}
.index_sort .index_group .sort_list navigator:nth-child(2),
.index_sort .index_group .sort_list navigator:nth-child(3) {
  border-bottom: 10rpx solid #fff;
}
.index_sort .index_group .sort_list navigator image {
  width: 100%;
  height: 100%;
}
