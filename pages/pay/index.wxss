/* pages/pay/index.wxss */
page {
  padding-bottom: 90rpx;
}
.receive_address_wrap .address_info {
  padding: 20rpx;
}
.receive_address_wrap .address_info .user_info {
  display: flex;
  justify-content: space-around;
}
.receive_address_wrap .address_info .user_info .user_name {
  flex: 3;
}
.receive_address_wrap .address_info .user_info .user_tel {
  flex: 1;
}
.cart_content .cart_title {
  font-size: 36rpx;
  border-top: 1rpx solid var(--themeColor);
  border-bottom: 1rpx solid var(--themeColor);
  padding: 20rpx;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_content .cart_main .cart_item .item_img {
  flex: 4;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .item_img image {
  width: 80%;
}
.cart_content .cart_main .cart_item .item_info {
  flex: 7;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .item_info .item_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_content .cart_main .cart_item .item_info .item_price_num {
  display: flex;
  justify-content: space-between;
  padding-top: 10rpx;
}
.cart_content .cart_main .cart_item .item_info .item_price_num .item_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_content .cart_main .cart_item .item_info .item_price_num .item_num {
  display: flex;
}
.cart_content .cart_main .cart_item .item_info .item_price_num .item_num .num {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.footer_tool .all_choose_wrap {
  flex: 2;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.footer_tool .total_price_wrap {
  flex: 4;
  text-align: right;
  padding-right: 20rpx;
}
.footer_tool .total_price_wrap .total_price {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: bolder;
}
.footer_tool .total_price_wrap .total_price text {
  font-size: 32rpx;
  color: #000;
  font-weight: normal;
}
.footer_tool .settlement {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: bolder;
  background-color: #f9544e;
  color: #fff;
}
